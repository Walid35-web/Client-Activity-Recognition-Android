<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".EditProfilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="profile_image" />
        <TextView
            android:id="@+id/editProfileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImageView"
            android:layout_centerHorizontal="true"
            android:text="Edit your profile"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/editName"
            android:layout_width="330dp"
            android:layout_height="55dp"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/lavender_border"
            android:drawablePadding="8dp"
            android:drawableTint="@color/lavender"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:paddingStart="15dp"
            android:drawableLeft="@drawable/ic_baseline_name_24"
            android:textColor="@color/lavender"
            android:textColorHint="@color/lavender"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:text="Genre"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/genderRadioGroup"
            >
            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/lavender"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:text="M" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/lavender"
                android:layout_marginLeft="20dp"

                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:text="F" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <EditText
            android:id="@+id/edit_email"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/lavender_border"
            android:drawableLeft="@drawable/baseline_email_24"

            android:padding="12dp"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/lavender"
            android:textColor="@color/lavender"
            android:textColorHint="@color/lavender"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"

            android:background="@drawable/lavender_border"
            android:padding="12dp"
            android:hint="password"
            android:paddingStart="15dp"
            android:inputType="textPassword"
            android:drawablePadding="8dp"
            android:drawableTint="@color/lavender"
            android:textColor="@color/lavender"
            android:drawableRight="@drawable/baseline_visibility_off_24"
            android:textColorHint="@color/lavender"
            android:longClickable="false"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:background="@drawable/lavender_border"
            android:padding="12dp"
            android:paddingStart="15dp"
            android:hint="Phone"
            android:inputType="text|phone"
            android:drawablePadding="8dp"
            android:drawableTint="@color/lavender"
            android:textColor="@color/lavender"
            android:textColorHint="@color/lavender"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/edit_major"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/lavender_border"
            android:padding="12dp"
            android:hint="Major"
            android:paddingStart="15dp"
            android:inputType="textPersonName"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_baseline_major_24"
            android:drawableTint="@color/lavender"
            android:textColor="@color/lavender"
            android:textColorHint="@color/lavender"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cancelButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custombutton"

            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#0019FF"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/saveButton"
            android:layout_width="130dp"
            android:background="@drawable/custombutton"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:textSize="18sp"
            android:textStyle="bold"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE "
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</LinearLayout>